files:
  "/etc/nginx/conf.d/https.conf":
    mode: "644"
    owner: root
    group: root
    content: |
      # Redirect HTTP to HTTPS (optional health check bypass can be added here)
      server {
          listen 80;
          server_name api.arstoien.org;
          return 301 https://$host$request_uri;
      }

      # HTTPS server block
      server {
          listen 443 ssl;
          server_name api.arstoien.org;

%           ssl_certificate      /etc/pki/tls/certs/server.crt;
%           ssl_certificate_key  /etc/pki/tls/certs/server.key;
          ssl_certificate      /etc/letsencrypt/live/api.arstoien.org/fullchain.pem;
          ssl_certificate_key  /etc/letsencrypt/live/api.arstoien.org/privkey.pem;

          ssl_session_timeout  5m;
          ssl_protocols        TLSv1.2 TLSv1.3;
          ssl_ciphers          HIGH:!aNULL:!MD5;
          ssl_prefer_server_ciphers on;

          location / {
              proxy_pass          http://127.0.0.1;
              proxy_http_version  1.1;
              proxy_set_header    Host $host;
              proxy_set_header    X-Real-IP $remote_addr;
              proxy_set_header    X-Forwarded-For $proxy_add_x_forwarded_for;
              proxy_set_header    X-Forwarded-Proto https;
              proxy_set_header    X-Forwarded-Host $host;
          }
      }

container_commands:
  01_restart_nginx:
    command: "sudo systemctl restart nginx"
