{
  "name": "@c-v-a-i/common",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "yarn lint --fix",
    "prettier:check": "prettier --check src/**/*.{ts,tsx,js,jsx,cjs}",
    "prettier:fix": "prettier --write ./src/**/*.{ts,tsx,js,jsx,cjs}",
    "codecheck": "tsc --noEmit && yarn lint && yarn prettier:check",
    "codecheck:fix": "yarn lint:fix && yarn prettier:fix"
  },
  "dependencies": {
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@c-v-a-i/tools": "*",
    "eslint": "^9.14.0",
    "prettier": "^3.3.3"
  }
}
