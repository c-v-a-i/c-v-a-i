{
  "presets": ["@babel/env", "@babel/react", "@babel/preset-typescript"],
  "plugins": [
    "@babel/plugin-proposal-class-properties",
    [
      "babel-plugin-module-resolver",
      {
        "root": ["./packages"],
        "alias": {
          "@c-v-a-i/server": "./packages/server",
          "@c-v-a-i/client": "./packages/client",
          "@c-v-a-i/common": "./packages/common",
          "@c-v-a-i/tools": "./packages/tools"
        }
      }
    ]
  ]
}
